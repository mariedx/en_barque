html, body {
  margin: 0;
  padding: 0;
}

.btn-primary {
  background-color: #477687 !important;
  border: none;

  &:hover, &:active {
  background-color: #3e6775 !important;
  }
}

/*navbar*/
.logo {
  margin-top: -8px;
  margin-right: 10px;
}

.navbar{ 
  background-color: white;
}

/*jumbotron*/
.jumbotron {
  position: relative;
  height: 94vh;
  background-size: cover;
  background-position-y: 68%;
  opacity: 0.8;
  background-image: url(<%= asset_path 'paperboat.jpg' %>);
}

.area-jumbotron {
  margin: 8% 10%;

  a {
    margin: 5px 0;
  }
}

.header-jumbotron {
  font-size: calc(20px + 2vw;);
}

.lead-jumbotron {
  text-transform: uppercase;
  letter-spacing: .3rem;
  padding: 2% 0;
}

/*about*/
#about {
  margin: 4%;
  
  .about-text {
    padding: 5%;
  }

  .img_about {
    height: 100%;
    width: 100%;
    padding: 0 5%;
  }
}

/*presentation*/
.grey-area {
background-color: #F8F9FA;
}

.embedresize {
  max-width: 800px;
  margin: 0 auto;

  .wrapper {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 */
    height: 0;
    margin: 0 auto;

    iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
  }
}

/*services*/
#services {
  margin: 0 7%;
}

.card-services-top {
  margin: 20px 0;
  min-height: 530px;
}

.card-services-bottom {
  margin: 20px 0;
  min-height: 370px;

  .card-body {
    padding: 0 8%;
  }
}

.pricing-card-title {
  padding-top: 15px;
}

/*feedbacks*/
.card-feedbacks {
  width: auto;
  margin: 6% 17%;
}

.card-text-long {
  padding: 2%;
}

.card-text-short {
  padding: 5%;
}

.img-feedback {
  width: 100%;
  height: 270px;
  object-fit: cover;
}

/*contact*/
.img-center {
  padding-bottom: 10%;
  padding-left: 5%;
  padding-right: 5%;
  width: 100%;
  height: auto;
}

/* MEDIA QUERIES */
@media screen and (max-width: 650px) {
  .background-image {
    background-position-x: 68%;
  }

  .area-jumbotron {
  margin: 13% 10%;
    a {
      margin: 5px 0;
      font-size: 1rem;
    }
    .lead-jumbotron {
    padding: 4% 0;
    }
  }

  .card-feedbacks {
    margin: 10% 10%;
  }
}

@media screen and (max-width: 800px) {
  .card-services-top, .card-services-bottom {
    min-height: auto;
    margin: 4% 3%;
  }

  .embedresize {
  margin: 0 3%;
  }
}

@media screen and (max-width: 1000px) {
  .card-feedbacks {
    width: auto;
    margin: 6% 0;
  }

  .img-feedback {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
}

@media screen and (max-width: 575px) {
  .card-feedbacks {
    width: auto;
    margin: 6% 17%;
  }

  .img-feedback {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
}