/*navbar*/
.logo {
  margin-top: -8px;
}

/*jumbotron*/
.background-image {
  background-image: url(<%= asset_path 'paperboat.jpg' %>);
  width: 100%;
  height: 90vh;
  text-align: center;
  background-position-y: 60%;
  opacity: 0.8;
  background-repeat: no-repeat;
  background-size: cover;
  background-attachment: fixed;
  position: relative;
}

.area-jumbotron {
  margin-left: 10%;
  margin-right: 10%;
  margin-top: 8%;
}

.header-jumbotron {
  text-transform: uppercase;
}

.lead-jumbotron {
  margin-top: 2%;
  margin-bottom: 3%;
  text-transform: uppercase;
  letter-spacing: .3rem;
}

/*about*/
.area-about {
  margin-top: -32px;
}

.img_about {
  max-width: 100%;
  height: auto;
}

.text-about {
  margin-top: 20%;
  margin-left: 12%;
  margin-right: 15%;
  line-height: 1.7;
}

/*presentation*/
.grey-area {
background-color: #F8F9FA;
}

/*feedbacks*/
.img-feedback {
  width: 100%;
  height: 300px;
  object-fit: cover;
}

/*contact*/
.img-center {
  height: 300px;
}